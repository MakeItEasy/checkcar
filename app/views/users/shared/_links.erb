<%- if controller_name != 'sessions' %>
  已经有账号？赶快
  <%= link_to t('view.action.sign_in'), new_user_session_path, class: "btn btn-danger btn-sm" %>
  吧！
  <br />
  <br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  还没有账号？赶快
  <%= link_to t('view.action.sign_up'), new_user_registration_path, class: "btn btn-success btn-sm" %>
  一个吧！
  <br />
  <br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  没有收到确认邮件？请点击
  <%= link_to t('view.action.resend'), new_user_confirmation_path, class: "btn btn-warning btn-sm" %>
  <br />
  <br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  没有收到解锁邮件？请点击
  <%= link_to t('view.action.resend'), new_user_unlock_path, class: "btn btn-primary btn-sm" %>
  <br />
  <br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "用 #{provider.to_s.titleize} 账号登录", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
