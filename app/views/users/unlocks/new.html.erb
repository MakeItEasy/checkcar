<% content_for :head_title do %>
  重发解锁邮件
<% end %>

<div class='row car-devise'>
  <div class='col-sm-8 car-left-side'>
    <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name),
        html: {class: 'form-horizontal', role: 'form', method: :post} ) do |f| %>

      <%= f.full_error :unlock_token %>

      <div class='car-form-items'>
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="car-form-actions">
        <%= f.button :submit, "重发解锁邮件",
              class: 'btn btn-success col-sm-2 col-sm-offset-2' %>
      </div>
    <% end %>
  </div>

  <div class='col-sm-4 car-right-side'>
    <%= render "users/shared/links" %>
  </div>
</div>
