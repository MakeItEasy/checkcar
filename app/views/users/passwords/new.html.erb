<% content_for :head_title do %>
<%= t("view.confirm.forget_password")%>
<% end %>

<div class='row car-devise'>
  <div class='col-sm-8 car-left-side'>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
        html: {class: 'form-horizontal', role: 'form', method: :post} ) do |f| %>

      <div class='car-form-items'>
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="car-form-actions">
        <%= f.button :submit, t('view.action.send_reset_password_mail'),
              class: 'btn btn-success col-sm-offset-2' %>
      </div>
    <% end %>
  </div>

  <div class='col-sm-4 car-right-side'>
    <%= render "users/shared/links" %>
  </div>
</div>
