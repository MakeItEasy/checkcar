<% content_for :head_title do %>
<%= t('view.label.set_password')%>
<% end %>

<div class='row car-devise'>
  <div class='col-sm-8 car-left-side'>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
        html: {class: 'form-horizontal', role: 'form', method: :put} ) do |f| %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class='car-form-items'>
        <%= f.input :password, label: t('view.label.new_password'), required: true, autofocus: true %>
      </div>
      <div class='car-form-items'>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="car-form-actions">
        <%= f.button :submit, t('view.action.modify_password'), class: 'btn btn-success col-sm-offset-2' %>
      </div>
    <% end %>
  </div>

  <div class='col-sm-4 car-right-side'>
    <%= render "users/shared/links" %>
  </div>
</div>
