<% content_for :head_title do %>
  <%= t('view.action.resend_confirm_mail')%>
<% end %>

<div class='row car-devise'>
  <div class='col-sm-8 car-left-side'>
    <%= simple_form_for(resource, as: resource_name, url: user_confirmation_path,
        html: {class: 'form-horizontal mask-form', role: 'form', method: :post} ) do |f| %>

      <%= f.full_error :confirmation_token, class: "car-token-alert" %>

      <div class='car-form-items'>
        <%= f.input :email, required: true, autofocus: true, input_html: {maxlength: 30} %>
      </div>

      <div class="car-form-actions">
        <%= f.button :submit, t('view.action.resend_confirm_mail'),
              class: 'btn btn-success col-sm-2 col-sm-offset-2' %>
      </div>
    <% end %>
  </div>

  <div class='col-sm-4 car-right-side'>
    <%= render "users/shared/links" %>
  </div>
</div>
