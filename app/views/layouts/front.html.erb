    <%= javascript_include_tag 'front', 'data-turbolinks-track' => true %>
    <%= yield :head_javascript %>

    <%= csrf_meta_tags %>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
