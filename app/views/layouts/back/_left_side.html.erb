<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
  <!-- Sidebar user panel -->
  <div class="user-panel">
    <div class="pull-left image">
      <%=render_current_user_image%>
    </div>
    <div class="pull-left info">
      <p><%= t('view.label.welcome', {name: current_admin.name}) %></p>
      <a><i class="fa fa-circle text-success"></i> <%= truncate(render_current_admin_roles, length: 15) %></a>
    </div>
  </div>
  <!-- search form -->
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="预约编号...">
      <span class="input-group-btn">
      <button type="submit" name="seach" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </form>
  <!-- /.search form -->
  <!-- sidebar menu: : style can be found in sidebar.less -->
  <ul class="sidebar-menu">
    <%= render_navigation( level: 1, context: :admin, renderer: :list_bootstrap_render) %>
  </ul>
</section>
<!-- /.sidebar -->
