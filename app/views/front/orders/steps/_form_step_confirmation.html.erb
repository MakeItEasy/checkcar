<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% flash.clear %>
<% end %>
<div class="confirmation">
  <div class="panel panel-info">
    <div class="panel-heading">预约信息确认</div>
    <div class="panel-body">
      <div class="form-group">
        <label class="col-sm-3 control-label"><%=Order.human_attribute_name(:station_id)%></label>
        <div class="col-sm-9">
          <p class="form-control-static important-info"><%=@order.station.name%></p>
          <p class="form-control-static">具体地址：<%=@order.station.address_text%></p>
          <p class="form-control-static">联系电话：<%=@order.station.telephone%></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label"><%=Order.human_attribute_name(:order_time)%></label>
        <div class="col-sm-9">
          <p class="form-control-static important-info">
            <%= l(@order.order_time) %>
          </p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label"><%=Order.human_attribute_name(:owner_name)%></label>
        <div class="col-sm-9">
          <p class="form-control-static"><%=@order.owner_name%></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label"><%=Order.human_attribute_name(:car_number)%></label>
        <div class="col-sm-9">
          <p class="form-control-static important-info"><%=@order.car_number%></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label"><%=Order.human_attribute_name(:telephone)%></label>
        <div class="col-sm-9">
          <p class="form-control-static important-info"><%=@order.telephone%></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-group required">
  <label class="tel required col-sm-3 control-label" for="order_net_telephone">
  <abbr title="必填项">*</abbr> <%= t('view.label.captcha') %></label>
  <div class="col-sm-5">
    <%= text_field_tag :captcha, nil, {autocomplete: "off", class: 'form-control', 
      placeholder: t('view.placeholder.captcha')} %>
  </div>
  <div class='col-sm-2' style='float: left;'>
      <%= captcha_tag class: 'car-captcha'%>
  </div>
</div>
