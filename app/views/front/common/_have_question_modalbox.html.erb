    <div class="modal modal-primary fade" id="haveQuestionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">我要提问</h4>
          </div>
          <%= form_for(Uaq.new, url: front_user_uaqs_path(:json), remote: true,
            html: {class: 'form-horizontal mask-form', role: 'form', 
              car_id_prefix: 'uaq', car_common_handler: ''} ) do |f| %>
          <div class="modal-body">
            <div class='car-form-items'>
              <div class="form-group string required uaq_question">
                <label class="string required col-sm-3 control-label" for="uaq_question">
                  <abbr title="必填项">*</abbr> 问题内容
                </label>
                <div class="col-sm-9">
                  <textarea class="string required form-control" id="uaq_question" name="uaq[question]" maxlength=1000></textarea>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit t('view.action.submit'), class: 'btn btn-primary' %>
          </div>
          <% end %>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="modal modal-primary" id="questionSuccessModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            提问成功！
          </div>
          <div class="modal-body">
            您可以到 <%= link_to "我的问题", front_user_uaqs_path, class: "btn btn-success btn-sm" %>  中查看回答进度！
            <br>
            <br>
            或者 <button type="button" class="btn btn-info btn-sm" data-dismiss="modal" aria-hidden="true">关闭</button> 本窗口。
          </div>
        </div>
      </div>
    </div>
