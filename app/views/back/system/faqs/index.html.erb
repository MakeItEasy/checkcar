<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
  <% if can? :create, Faq %>
    <div class="btn-group">
      <%= link_to new_back_system_faq_path, {class: 'btn btn-default'} do%>
        <i class="glyphicon glyphicon-plus"></i> <%= t('view.action.new') %> 
      <% end -%>
    </div>
  <% end -%>
  </div>
</div>

<div class='car-content-list'>

  <%= grid @faqs_grid do |g|
    g.column name: Faq.human_attribute_name(:id), attribute: "id"
    g.column name: Faq.human_attribute_name(:question), attribute: "question"
    g.column name: Faq.human_attribute_name(:create_user_id), attribute: "create_user_id" do |item|
      item.admin.name
    end
    g.column name: Faq.human_attribute_name(:updated_at), attribute: "updated_at", filter: false do |item|
      l(item.updated_at)
    end
    g.column do |item|
      links = []
      if can? :read, item
        links << link_to(I18n.t('view.action.show'), [:back, :system, item])
      end
      if can? :update, item
        links << link_to(I18n.t('view.action.edit'), edit_back_system_faq_path(item))
      end
      if can? :destroy, item
        links << link_to(I18n.t('view.action.delete'), [:back, :system, item], method: :delete, data: { confirm: t('view.confirm.delete')})
      end
      links.join(t('view.label.links_split')).html_safe
    end
  end -%>

</div>
