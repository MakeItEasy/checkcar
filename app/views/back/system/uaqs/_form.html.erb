<%= simple_form_for([:back, :system, @uaq], html: {class: 'form-horizontal mask-form', role: 'form'} ) do |f| %>
  <div class='car-form-items'>
    <div class="form-group">
      <label class="col-sm-2 control-label"><%= Uaq.human_attribute_name(:question) %></label>
      <div class="col-sm-10">
        <p class="form-control-static"><%= @uaq.question%></p>
      </div>
    </div>
    <%= f.input :answer, required: true %>
  </div>
  <div class="car-form-actions bg-gray">
    <div class='col-sm-offset-2 col-sm-10 button-wrapper'>
      <%= f.button :submit, value: t('view.action.submit'), class: 'btn-primary' %>
    </div>
    <div class='clearfix'></div>
  </div>
<% end %>
