<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
      <%= link_to back_mystation_station_path, {class: 'btn btn-default'} do%>
        <i class="fa fa-info-circle"></i> <%= t('view.action.show_detail') %> 
      <% end %>
    </div>
  </div>
</div>

<div class='box box-info car-content-form'>
  <%= simple_form_for(@station, url: update_picture_back_mystation_station_path, html: {class: 'form-horizontal mask-form', role: 'form', multipart: true, method: :post } ) do |f| %>
    <div class='car-form-items'>
      <%= f.simple_fields_for :pictures do |picture_form| %>
        <% if picture_form.object.new_record? %>
          <%= picture_form.input :data%>
        <% else %>
          <div class="form-group">
            <div class="col-sm-2 control-label">
              <%= picture_form.check_box :_destroy %><%= t('view.action.delete')%>
            </div>
            <div class="col-sm-10">
              <%= image_tag picture_form.object.data.url(:medium)%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="car-form-actions bg-gray">
      <div class='col-sm-offset-2 col-sm-10 button-wrapper'>
        <%= f.button :submit, class: 'btn-primary' %>
      </div>
      <div class='clearfix'></div>
    </div>
  <% end %>
</div>
