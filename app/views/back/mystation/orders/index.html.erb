<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
  </div>
</div>

<div class="car-nav-tabs-custom">
  <ul class="nav nav-tabs" role="tablist">
    <li class="<%= 'active' if params[:scope] == 'today' %>">
      <a href="<%= back_mystation_orders_path(scope: 'today')%>">今日进行预约</a>
    </li>
    <li class="<%= 'active' if params[:scope] == 'weekly' %>">
      <a href="<%= back_mystation_orders_path(scope: 'weekly')%>">七天内预约</a>
    </li>
    <li class="<%= 'active' if params[:scope].nil? || params[:scope] == 'all' %>">
      <a href="<%= back_mystation_orders_path(scope: 'all')%>">全部</a>
    </li>
    <li class="<%= 'active' if params[:scope] == 'newest' %>">
      <a href="<%= back_mystation_orders_path(scope: 'newest')%>">新增预约</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active">
      <% if params[:scope].nil? || params[:scope] == "all" %>
        <%= render "index_all" %>
      <% else %>
        <div class='car-content-list'>
          <%= render "index_no_filter" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
