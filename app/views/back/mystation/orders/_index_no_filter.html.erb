<%= grid @order_phones_grid, show_filters: :no do |g|
  g.column name: OrderPhone.human_attribute_name(:id), attribute: "id"
  g.column name: OrderPhone.human_attribute_name(:order_no), attribute: "order_no"
  g.column name: OrderPhone.human_attribute_name(:order_date), attribute: "order_date"
  g.column name: OrderPhone.human_attribute_name(:order_time), attribute: "order_time" do |item|
    item.order_time_text
  end
  g.column name: OrderPhone.human_attribute_name(:car_number), attribute: "car_number", ordering: false
  g.column name: OrderPhone.human_attribute_name(:telephone), attribute: "telephone", ordering: false
  g.column do |item|
    links = []
    if can? :read, item
      links << link_to(I18n.t('view.action.show'), [:back, :mystation, item])
    end
    if can? :update, item
      links << link_to(I18n.t('view.action.edit'), edit_back_mystation_order_phone_path(item))
    end
    if can? :destroy, item
      links << link_to(I18n.t('view.action.delete'), [:back, :mystation, item], method: :delete, data: { confirm: t('view.confirm.delete')})
    end
    links.join(t('view.label.links_split')).html_safe
  end
end -%>
