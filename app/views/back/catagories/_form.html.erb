<%= simple_form_for([:back, @catagory], html: {class: 'form-horizontal', role: 'form'} ) do |f| %>
  <div class='car-form-items'>
    <%= f.input :name %>
    <%= f.input :order, as: :integer, input_html: {min: 1, max: 100} %>
    <%= f.input :memo %>
  </div>
  <div class="car-form-actions bg-gray">
    <div class='col-sm-offset-2 col-sm-10 button-wrapper'>
      <%= f.button :submit, class: 'btn-primary' %>
    </div>
    <div class='clearfix'></div>
  </div>
<% end %>
