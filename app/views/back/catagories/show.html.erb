<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
  <% if can? :update, @catagory %>
    <div class="btn-group">
      <%= link_to edit_back_catagory_path(@catagory), {class: 'btn btn-default'} do %>
        <i class="fa fa-edit"></i> <%= t('view.action.edit') %> 
      <% end %>
    </div>
  <% end %>
  <% if can? :destroy, @catagory %>
    <div class="btn-group">
      <%= link_to [:back, @catagory], {method: :delete,
      data: { confirm: t('view.confirm.delete')},  class: 'btn btn-default'} do %>
        <i class="glyphicon glyphicon-remove"></i> <%= t('view.action.delete') %> 
      <% end %>
    </div>
  <% end %>
    <div class="btn-group pull-right">
      <%= link_to back_catagories_path, {class: 'btn btn-default'} do %>
        <i class="fa fa-list"></i> <%= t('view.action.back_to_list') %> 
      <% end %>
    </div>
  </div>
</div>

<div class='box box-info car-content-box'>
  <dl class="dl-horizontal">
    <dt><%= Catagory.human_attribute_name(:name) %></dt>
    <dd><%= @catagory.name %></dd>
    <dt><%= Catagory.human_attribute_name(:order) %></dt>
    <dd><%= @catagory.order %></dd>
    <dt><%= Catagory.human_attribute_name(:memo) %></dt>
    <dd><%= render_blank_enable_item(@catagory.memo) %></dd>
  </dl>
</div>
