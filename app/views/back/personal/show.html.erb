<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
      <%= link_to back_personal_edit_path, {class: 'btn btn-default'} do %>
        <i class="fa fa-edit"></i> <%= t('view.action.edit') %> 
      <% end %>
    </div>
  </div>
</div>

<div class='box box-info car-content-box'>
  <dl class="dl-horizontal">
    <dt><%= Admin.human_attribute_name(:email) %></dt>
    <dd><%= @admin.email %></dd>
    <dt><%= Admin.human_attribute_name(:name) %></dt>
    <dd><%= @admin.name %></dd>
    <dt><%= Admin.human_attribute_name(:sex) %></dt>
    <dd><i class="fa fa-<%= @admin.sex %>"></i> <%= @admin.sex_text %></dd>
    <dt><%= Admin.human_attribute_name(:telephone) %></dt>
    <dd><%= @admin.telephone %></dd>
  </dl>
</div>
