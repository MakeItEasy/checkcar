<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
    <div class="btn-group pull-right">
      <%= link_to back_personal_show_path, {class: 'btn btn-default'} do %>
        <i class="fa fa-reply"></i> <%= t('view.action.back') %> 
      <% end %>
    </div>
  </div>
</div>

<div class='box box-info car-content-form'>
  <%= simple_form_for(@admin, url: [:back, :personal, :update], html: {class: 'form-horizontal mask-form', role: 'form', method: :put} ) do |f| %>
    <div class='car-form-items'>
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= Admin.human_attribute_name(:email) %></label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @admin.email %></p>
        </div>
      </div>
      <%= f.input :name, placeholder: t('view.placeholder.name') %>
      <%= f.input :telephone, input_html: telephone_mask_hash %>
      <%= f.input :sex, as: :radio_buttons %>
    </div>
    <div class="car-form-actions bg-gray">
      <div class='col-sm-offset-2 col-sm-10 button-wrapper'>
        <%= f.button :submit, t('view.action.modify'), class: 'btn-primary' %>
      </div>
      <div class='clearfix'></div>
    </div>
  <% end %>
</div>
