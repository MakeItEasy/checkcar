<div class='box car-toolbox'>
  <div class="btn-toolbar" role="toolbar">
    <% if can? :update, @faq -%>
    <div class="btn-group">
      <%= link_to edit_back_faq_path(@faq), {class: 'btn btn-default'} do %>
        <i class="fa fa-edit"></i> <%= t('view.action.edit') %> 
      <% end %>
    </div>
    <% end %>
    <% if can? :destroy, @faq -%>
    <div class="btn-group">
      <%= link_to [:back, @faq], {method: :delete,
      data: { confirm: t('view.confirm.delete')},  class: 'btn btn-default'} do %>
        <i class="glyphicon glyphicon-remove"></i> <%= t('view.action.delete') %> 
      <% end %>
    </div>
    <% end %>
    <div class="btn-group pull-right">
      <%= link_to back_faqs_path, {class: 'btn btn-default'} do %>
        <i class="fa fa-list"></i> <%= t('view.action.back_to_list') %> 
      <% end %>
    </div>
  </div>
</div>

<div class='box box-info car-content-box'>
  <dl class="dl-horizontal">
    <dt><%= Faq.human_attribute_name(:create_user_id) %></dt>
    <dd><%= @faq.admin.name %></dd>
    <dt><%= Faq.human_attribute_name(:question) %></dt>
    <dd><%= @faq.question %></dd>
    <dt><%= Faq.human_attribute_name(:answer) %></dt>
    <dd><%= @faq.answer %></dd>
    <dt><%= Faq.human_attribute_name(:created_at) %></dt>
    <dd><%= l(@faq.created_at) %></dd>
    <dt><%= Faq.human_attribute_name(:updated_at) %></dt>
    <dd><%= l(@faq.updated_at) %></dd>
  </dl>
</div>
